<resources>

    <style name="MyCustomTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBarTheme</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_view_as_list</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyActionBarTheme" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:titleTextStyle">@style/subMyActionBarTheme</item>
    </style>

    <style name="subMyActionBarTheme">
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="drawerList">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@color/drawerListBackground</item>
        <item name="android:divider">@android:color/black</item>
        <item name="android:dividerHeight">1dp</item>
    </style>


    <style name="goodFrameTitle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="goodProperty">
         <item name="android:textStyle">bold</item>
        <item name="android:layout_marginLeft">@dimen/window_padding</item>
    </style>
</resources>
